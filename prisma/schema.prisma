// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @unique
  name       String
  email      String     @unique
  avatar     String
  password   String
  properties Property[]

  @@map("users")
}

model Property {
  id          String  @id @unique
  title       String
  description String
  type        String
  location    String
  photo       String
  price       Int
  user        User?   @relation(fields: [creator], references: [email])
  creator     String?

  @@map("properties")
}
