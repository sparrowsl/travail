{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"lineWidth": 100,
		"ignore": ["node_modules", ".svelte-kit", ".husky"]
	},
	"linter": {
		"ignore": ["node_modules", ".svelte-kit", ".husky"],
		"rules": {
			"recommended": true,
			"a11y": {
				"recommended": true
			},
			"correctness": {
				"recommended": true
			},
			"performance": {
				"recommended": true
			},
			"security": {
				"recommended": true
			},
			"suspicious": {
				"recommended": true
			},
			"style": {
				"recommended": true
			},
			"complexity": {
				"recommended": true
			}
		}
	}
}
